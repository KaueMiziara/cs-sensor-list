<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SensorList.Views.SensorItemView">
    
    <StackPanel Margin="15">
        <Grid ColumnDefinitions="*,auto,auto,auto">
            <TextBlock Margin="5" VerticalAlignment="Center" Grid.Column="0">Item name</TextBlock>
            <TextBlock Margin="5" VerticalAlignment="Center" Grid.Column="1">Item category</TextBlock>
            <TextBlock Margin="5" VerticalAlignment="Center" Grid.Column="2">Amount</TextBlock>
            <Button Margin="5" VerticalAlignment="Center" Grid.Column="3" CornerRadius="10">Delete</Button>
        </Grid>
    </StackPanel>
</UserControl>
